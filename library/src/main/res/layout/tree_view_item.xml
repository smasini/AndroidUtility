<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_cell"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:layout_centerVertical="true"
        android:id="@+id/btn_expande"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/btn_expande"
        android:layout_toEndOf="@id/btn_expande"
        android:layout_centerVertical="true"
        android:id="@+id/imageview_treeview"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/textview_label"
        android:text="Label"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/check_selected"
        android:layout_toStartOf="@+id/check_selected"
        android:layout_toEndOf="@id/imageview_treeview"
        android:layout_toRightOf="@id/imageview_treeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/check_selected"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>